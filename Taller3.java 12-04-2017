package taller3;
import java.util.Scanner;
// taller numero 3
  // Nixon Campoverde 12-03-2017
public class Taller3 {

    // hacer un programa que nos imprima la media aritmetica de altura de las personas
    
    public static void main(String[] args) {
        // creacion de variiables para que el usuario las ingrese 
        Scanner datos = new Scanner(System.in); 
        
        // creacion de las variables
        double altura1=0, altura2=0, altura3=0, altura4=0, altura5=0;
        double mediaaritmetica=0;
        // solicitamos el ingreso de variables al usuario
        System.out.print("Ingrese la altura de la persona 1: \n");
        altura1=datos.nextDouble();
        System.out.print("Ingrese la altura de la persona 2: \n");
        altura2=datos.nextDouble();
        System.out.print("Ingrese la altura de la persona 3: \n");
        altura3=datos.nextDouble();
        System.out.print("Ingrese la altura de la persona 4: \n");
        altura4=datos.nextDouble();
        System.out.print("Ingrese la altura de la persona 5: \n");
        altura5=datos.nextDouble();        
        //realizamos las operaciones
        mediaaritmetica=(altura1+altura2+altura3+altura4+altura5)/5;
        //presentar en pantalla
        System.out.print("La altura media es: "+mediaaritmetica+"\n");
    }   

        
    
}
